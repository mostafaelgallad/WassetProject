@model List<WassetPortal_DAL.Models.User>
<!-- base:css -->
<link rel="stylesheet" href="~/wwwroot/vendors/typicons/typicons.css">
<link rel="stylesheet" href="~/wwwroot/vendors/css/vendor.bundle.base.css">
<!-- endinject -->
<!-- inject:css -->

<link href="~/wwwroot/css/vertical-layout-light/style.css" rel="stylesheet" />
<!-- endinject -->
<link rel="shortcut icon" href="~/wwwroot/images/favicon.png" />

<button class="btn btn-primary" onclick="window.location.href = '/user/createUser'">Create User</button>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">users</h4>
            <p class="card-description">
              
            </p>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                User
                            </th>
                            <th>
                                User code
                            </th>
                            <th>
                                User Name
                            </th>
                            <th>
                                Mobile number
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                User Status
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                                <tr>
                                                    <td class="py-1">
                                                        <img src="~/wwwroot/images/faces/face1.jpg" alt="image" />
                                                    </td>
                                                    <td>
                                                        @item.UserCode
                                                    </td>
                                                    <td>
                                                        @item.UserName
                                                    </td>
                                                    <td>
                                                        @item.Mobile
                                                    </td>
                                                    <td>
                                                        @item.Email
                                                    </td>

                                              @{ if (item.UserStatus == true)
                                                  {
                                                     <td>
                                                        <label class="badge badge-success">Completed</label>
                                                     </td> 
                                                   }
                                                 else
                                                  {
                                                     <td>
                                                         <label class="badge badge-danger">Pending</label>
                                                     </td>
                                                   }
                                                  }
                                                    <td>
                                                        
                                                    </td>
                                                   
                                                </tr>
                                }
                            }
                        }
                                                                                                                                                 </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

